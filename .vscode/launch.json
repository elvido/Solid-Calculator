{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug Frontend (incl. Mocks)",
      "configurations": [
        "Launch Mock Server",
        "Serve Frontend",
        "Debug Frontend in Edge"
      ]
    }
  ],
  "configurations": [
    // üß≠ Attach debugger to frontend in Edge
    {
      "type": "msedge",
      "request": "launch",
      "name": "Debug Frontend in Edge",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*",
        "rollup:///src/*": "${webRoot}/*",
        "file:///src/*": "${webRoot}/*"
      }
    },
    // üåê Serve frontend locally (used for preview/debug)
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Serve Frontend",
      "command": "node ./plugins/expressServe.mjs --config=express-serve.config.mjs --folder=dist,. --open=false",
      "cwd": "${workspaceFolder}"
    },
    // üåê Launch Mock Server (used for preview/debug)
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Launch Mock Server",
      "command": "node mock-server/index.mjs",
      "cwd": "${workspaceFolder}"
    },
    // üöÄ Launch Express Server with symlink + ESM support
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Express Serve",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--preserve-symlinks",
        "--preserve-symlinks-main",
        "--experimental-modules",
        "--inspect=9229"
      ],
      "args": [
        "plugins/expressServe.mjs"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "MOCK": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    // üöÄ Launch Mock Server with symlink + ESM support
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Mock Server",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--preserve-symlinks",
        "--preserve-symlinks-main",
        "--experimental-modules",
        "--inspect=9229"
      ],
      "args": [
        "mock-server/index.mjs"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "MOCK": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    // üß© Attach to running mock server (port 9229)
    {
      "type": "pwa-node",
      "request": "attach",
      "name": "Attach to Mock Server",
      "port": 9229,
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    // üß© Attach to any Node process (generic)
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Node",
      "port": 9229
    },
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
  ]
}
